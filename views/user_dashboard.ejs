<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/user_dashboard.css">
    <title>User Dashboard</title>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>My Account</h2>
            </div>
            <ul class="sidebar-menu">
                <li class="active"><a href="#bookings">My Bookings</a></li>
                <li><a href="#profile">Profile Settings</a></li>
                <li><a href="#notifications">Notifications</a></li>
                <li><a href="#saved-events">Saved Events</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </aside>
        <main class="main-content">
            <header class="header">
                <h1>User Dashboard</h1>
                <div class="header-actions">
                    <div class="search-container">
                        <div class="search-box">
                            <input class="input" type="text" placeholder="Search bookings...">
                        </div>
                    </div>
                </div>
            </header>

            <section id="bookings" class="dashboard-section tab-content active">
                <h2 class="section-title">My Bookings</h2>
                <div class="bookings-filter">
                    <select id="booking-filter">
                        <option value="all">All Bookings</option>
                        <option value="upcoming">Upcoming Events</option>
                        <option value="past">Past Events</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="bookings-list">
                    <!-- Booking cards would be generated dynamically -->
                    <div class="booking-card">
                        <div class="booking-header">
                            <div>
                                <h3 class="booking-title">Tech Conference 2023</h3>
                                <p class="booking-date">Booked on May 1, 2023</p>
                            </div>
                            <span class="booking-status status-completed">Completed</span>
                        </div>
                        <div class="booking-details">
                            <div class="booking-detail">
                                <p class="detail-label">Date & Time</p>
                                <p class="detail-value">June 15, 2023 • 9:00 AM</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Location</p>
                                <p class="detail-value">Convention Center, San Francisco</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Ticket Type</p>
                                <p class="detail-value">VIP Pass</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Ticket Price</p>
                                <p class="detail-value">$75.00</p>
                            </div>
                        </div>
                        <div class="booking-actions">
                            <button class="view-ticket-btn">View Ticket</button>
                        </div>
                    </div>
                    <div class="booking-card">
                        <div class="booking-header">
                            <div>
                                <h3 class="booking-title">Music Festival</h3>
                                <p class="booking-date">Booked on June 10, 2023</p>
                            </div>
                            <span class="booking-status status-upcoming">Upcoming</span>
                        </div>
                        <div class="booking-details">
                            <div class="booking-detail">
                                <p class="detail-label">Date & Time</p>
                                <p class="detail-value">July 28, 2023 • 4:00 PM</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Location</p>
                                <p class="detail-value">Central Park, New York</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Ticket Type</p>
                                <p class="detail-value">Weekend Pass</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Ticket Price</p>
                                <p class="detail-value">$120.00</p>
                            </div>
                        </div>
                        <div class="booking-actions">
                            <button class="view-ticket-btn">View Ticket</button>
                            <button class="cancel-booking-btn">Cancel Booking</button>
                        </div>
                    </div>
                    <div class="booking-card">
                        <div class="booking-header">
                            <div>
                                <h3 class="booking-title">Business Workshop</h3>
                                <p class="booking-date">Booked on April 5, 2023</p>
                            </div>
                            <span class="booking-status status-cancelled">Cancelled</span>
                        </div>
                        <div class="booking-details">
                            <div class="booking-detail">
                                <p class="detail-label">Date & Time</p>
                                <p class="detail-value">April 20, 2023 • 10:00 AM</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Location</p>
                                <p class="detail-value">Business Center, Chicago</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Ticket Type</p>
                                <p class="detail-value">Standard</p>
                            </div>
                            <div class="booking-detail">
                                <p class="detail-label">Ticket Price</p>
                                <p class="detail-value">$45.00</p>
                            </div>
                        </div>
                        <div class="booking-actions">
                            <button class="view-ticket-btn">View Details</button>
                        </div>
                    </div>
                </div>
            </section>

            <section id="profile" class="dashboard-section tab-content">
                <h2 class="section-title">Profile Settings</h2>
                <div class="profile-section">
                    <div class="profile-sidebar">
                        <div class="profile-image">
                            <img src="/images/guest.png" alt="User Profile">
                        </div>
                        <button class="change-photo-btn">Change Photo</button>
                    </div>
                    <div class="profile-details">
                        <h3>Personal Information</h3>
                        <form id="profile-form" action="/user/update-profile" method="POST">
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" id="name" name="name" value="John Doe" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input type="email" id="email" name="email" value="john.doe@example.com" required>
                                </div>
                                <div class="form-group">
                                    <label for="phone">Phone Number</label>
                                    <input type="tel" id="phone" name="phone" value="(555) 123-4567">
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="save-btn">Save Changes</button>
                                <button type="reset" class="cancel-btn">Cancel</button>
                            </div>
                        </form>
                        <div class="password-change-section">
                            <h3>Change Password</h3>
                            <form id="password-form" action="/user/change-password" method="POST">
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="current-password">Current Password</label>
                                        <input type="password" id="current-password" name="currentPassword" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="new-password">New Password</label>
                                        <input type="password" id="new-password" name="newPassword" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="confirm-password">Confirm New Password</label>
                                        <input type="password" id="confirm-password" name="confirmPassword" required>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="save-btn">Change Password</button>
                                    <button type="reset" class="cancel-btn">Cancel</button>
                                </div>
                            </form>
                        </div>
                        <div class="password-change-section">
                            <h3>Change Email Address</h3>
                            <form id="email-form" action="/user/change-email" method="POST">
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="current-email">Current Email</label>
                                        <input type="email" id="current-email" name="currentEmail" value="john.doe@example.com" readonly>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="new-email">New Email Address</label>
                                        <input type="email" id="new-email" name="newEmail" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="confirm-email">Confirm New Email</label>
                                        <input type="email" id="confirm-email" name="confirmEmail" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="password-for-email">Current Password</label>
                                        <input type="password" id="password-for-email" name="passwordForEmail" required placeholder="Enter your password to confirm">
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="save-btn">Change Email</button>
                                    <button type="reset" class="cancel-btn">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>

            <section id="notifications" class="dashboard-section tab-content">
                <h2 class="section-title">Notifications</h2>
                <div class="notifications-container">
                    <!-- This would be populated with user's notifications -->
                    <p>No new notifications.</p>
                </div>
            </section>

            <section id="saved-events" class="dashboard-section tab-content">
                <h2 class="section-title">Saved Events</h2>
                <div class="saved-events-container">
                    <!-- This would be populated with user's saved events -->
                    <p>You haven't saved any events yet.</p>
                </div>
            </section>
        </main>
    </div>

    <%- include('partials/footer') %>

    <script src="/js/sidebar.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab navigation
            const menuItems = document.querySelectorAll('.sidebar-menu li a');
            const tabContents = document.querySelectorAll('.tab-content');
            
            menuItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    if (this.getAttribute('href').startsWith('#')) {
                        e.preventDefault();
                        const target = this.getAttribute('href').substring(1);
                        
                        // Hide all tab contents and deactivate all menu items
                        tabContents.forEach(tab => tab.classList.remove('active'));
                        menuItems.forEach(item => item.parentElement.classList.remove('active'));
                        
                        // Show target tab content and activate current menu item
                        document.getElementById(target).classList.add('active');
                        this.parentElement.classList.add('active');
                    }
                });
            });
            
            // Booking filter functionality
            const bookingFilter = document.getElementById('booking-filter');
            const bookingCards = document.querySelectorAll('.booking-card');
            
            bookingFilter.addEventListener('change', function() {
                const filterValue = this.value;
                
                bookingCards.forEach(card => {
                    const status = card.querySelector('.booking-status').className.split(' ')[1];
                    
                    if (filterValue === 'all' || 
                        (filterValue === 'upcoming' && status === 'status-upcoming') ||
                        (filterValue === 'past' && status === 'status-completed') ||
                        (filterValue === 'cancelled' && status === 'status-cancelled')) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
            
            // Form submission handling
            const profileForm = document.getElementById('profile-form');
            const passwordForm = document.getElementById('password-form');
            const emailForm = document.getElementById('email-form');
            
            profileForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Here you would typically send the form data to the server
                alert('Profile updated successfully!');
            });
            
            passwordForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const newPassword = document.getElementById('new-password').value;
                const confirmPassword = document.getElementById('confirm-password').value;
                
                if (newPassword !== confirmPassword) {
                    alert('New passwords do not match!');
                    return;
                }
                
                // Here you would typically send the form data to the server
                // For now, just show a success message
                alert('Password changed successfully!');
                this.reset();
            });
            
            emailForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const newEmail = document.getElementById('new-email').value;
                const confirmEmail = document.getElementById('confirm-email').value;
                
                if (newEmail !== confirmEmail) {
                    alert('New email addresses do not match!');
                    return;
                }
                
                // Here you would typically send the form data to the server
                // For now, just show a success message
                alert('Email address changed successfully!');
                this.reset();
                
                // Update the displayed email in the profile form and current email field
                document.getElementById('email').value = newEmail;
                document.getElementById('current-email').value = newEmail;
            });
            
            // Toggle sidebar functionality for mobile
            const toggleSidebar = document.getElementById('toggle-sidebar');
            const sidebar = document.querySelector('.sidebar');
            
            if (toggleSidebar) {
                toggleSidebar.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                });
            }
        });
    </script>
</body>
</html>