<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= category %> - EventMaster
    </title>

</head>

<body class="background-container">
    <div class="Header">
        <div class="LOGO">
            <img class="LOGO" src="./images/favicon.ico" alt="">
        </div>
        <div class="navbar">
            <div class="button-group">
                <button class="btn btn-signup" onclick="window.location.href = '/sign-up' ">Sign Up</button>
                <button class="btn btn-login" onclick="window.location.href = '/login' ">Log in</button>
            </div>
        </div>
    </div>

    <div class="blank-space-20px" style="height: 20px;"></div>
    <div class="blank-space-20px" style="height: 20px;"></div>

    <h1 class="home-heading">
        <%= category %>
    </h1>

    <div class="cards-container">
        <% cards.forEach(function(card) { %>
            <div class="category-card">
                <img src="<%= card.image %>" alt="<%= card.title %>">
                <p>
                    <%= card.title %>
                </p>
            </div>
            <% }); %>
    </div>
</body>

</html>